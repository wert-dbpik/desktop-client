<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import org.controlsfx.control.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.wert.datapik.utils.entities.users.PermissionsController">
   <children>
      <VBox fx:id="vbPermitions" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER_RIGHT" minHeight="25.0" prefHeight="25.0">
               <children>
                  <Label text="РАЗРЕШЕННЫЕ ОПЕРАЦИИ">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                     <VBox.margin>
                        <Insets bottom="10.0" top="5.0" />
                     </VBox.margin>
                  </Label>
                  <HBox fx:id="permitionsButtons" alignment="CENTER_RIGHT" spacing="5.0" HBox.hgrow="ALWAYS">
                     <padding>
                        <Insets bottom="3.0" top="3.0" />
                     </padding>
                  </HBox>
               </children>
            </HBox>
            <TableView prefHeight="200.0" prefWidth="200.0">
              <columns>
                <TableColumn prefWidth="206.0" text="Наименование" />
                <TableColumn prefWidth="392.0" text="Описание" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <CheckBox fx:id="chbUsers" mnemonicParsing="false" text="Пользователи">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
               <VBox.margin>
                  <Insets left="10.0" top="20.0" />
               </VBox.margin>
            </CheckBox>
            <CheckBox fx:id="chbAddUsers" mnemonicParsing="false" text="Добавлять">
               <font>
                  <Font name="System Italic" size="16.0" />
               </font>
               <VBox.margin>
                  <Insets left="20.0" top="5.0" />
               </VBox.margin>
            </CheckBox>
            <CheckBox fx:id="chbCangeUsers" mnemonicParsing="false" text="Изменять">
               <font>
                  <Font name="System Italic" size="16.0" />
               </font>
               <VBox.margin>
                  <Insets left="20.0" top="5.0" />
               </VBox.margin>
            </CheckBox>
            <CheckBox fx:id="chbDeleteUsers" mnemonicParsing="false" text="Удалять">
               <font>
                  <Font name="System Italic" size="16.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" left="20.0" top="5.0" />
               </VBox.margin>
            </CheckBox>
            <Separator prefWidth="200.0" />
            <CheckBox fx:id="chbDrafts" mnemonicParsing="false" text="Чертежи">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
               <VBox.margin>
                  <Insets left="10.0" top="10.0" />
               </VBox.margin>
            </CheckBox>
            <CheckBox fx:id="chbAddDrafts" mnemonicParsing="false" text="Добавлять">
               <font>
                  <Font name="System Italic" size="16.0" />
               </font>
               <VBox.margin>
                  <Insets left="20.0" top="5.0" />
               </VBox.margin>
            </CheckBox>
            <CheckBox fx:id="chbCangeDrafts" mnemonicParsing="false" text="Изменять">
               <font>
                  <Font name="System Italic" size="16.0" />
               </font>
               <VBox.margin>
                  <Insets left="20.0" top="5.0" />
               </VBox.margin>
            </CheckBox>
            <CheckBox fx:id="chbDeleteDrafts" mnemonicParsing="false" text="Удалять">
               <font>
                  <Font name="System Italic" size="16.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" left="20.0" top="5.0" />
               </VBox.margin>
            </CheckBox>
            <Separator prefWidth="200.0" />
         </children>
      </VBox>
   </children>
